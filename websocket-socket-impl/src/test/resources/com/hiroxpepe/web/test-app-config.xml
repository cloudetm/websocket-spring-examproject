<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd">
   
    <!-- the global arrayset object. -->
    <bean id="copyOnWriteArraySet"
        class="java.util.concurrent.CopyOnWriteArraySet">
        <constructor-arg>
            <set value-type="com.hiroxpepe.web.SiteVisitorObserverWebSocket"/>
        </constructor-arg>
    </bean>
   
    <!-- the global observable object. -->
    <bean id="observable"
        class="com.hiroxpepe.web.MockObservable">
    </bean>
   
    <!-- a websocket object. -->
    <bean id="observerWebSocket"
        class="com.hiroxpepe.web.SiteVisitorWebSocket"
        scope="prototype">
    </bean>
    
    <!-- a domain object for test. -->
    <bean id="siteVisitor"
        class="com.hiroxpepe.web.MockVisitor"
        scope="prototype">
    </bean>

</beans>
